<div class="container-xxl py-5">
  <div class="container">
    <div class="bg-light rounded p-3">
      <div class="bg-dark rounded p-4" style=" border: 1px dashed rgba(0, 185, 142, 0.3);background-color: #00b98e !important;">
        <!-- <div class="row g-5 align-items-center"> -->
          <div class="text-center mx-auto mb-5 wow fadeInUp" data-wowdelay="0.1s"style="max-width: 600px">
         
          
          
          <h1 class="text-black mb-4">Reset Password</h1>
          <!-- <p class="text-white">Enter your registered email</p> -->
          <form action="/reset_password" method="post">
            <div class="row">
            <label for="inputPassword" class="col-sm-2 col-formlabel text-white">New Password :</label>
            <div class="col-sm-10">
            <input type="password" class="form-control"
            name="npassword" placeholder="password" required="">
            </div>
            </div>
            <br>
            <div class="row">
            <label for="inputPassword" class="col-sm-2 col-formlabel text-white">Confirm Password :</label>
            <div class="col-sm-10">
            <input type="password" class="form-control"
            name="password" placeholder="Confirm Password" required="">
            </div>
            </div>
            <br>
            <div class="text-center mx-auto" data-wow-delay="0.1s"
            style="max-width: 200px;">
            <button type="submit" class="btn btn-dark border-0 w100">Reset Password</button>
            </div>
            <br>
            </form>
        </div>
      </div>
    </div>
  </div>
