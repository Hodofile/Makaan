<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Student Detail</h1>
    <table border="2">
        <tr>
            <th>Name</th>
            <th>View</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        <% for(let k of sdata) { %>
         <tr>
            <td><%=k.name%></td>
            <td><a href="/single/<%=k._id%>">View</a></td>
            <td><a href="/update/<%=k._id%>">Update</a></td>
            <td><button onclick="deleteRecord('<%=k._id%>')">Delete</button></td>
         </tr>
         <% } %>
    </table>
</body>
<script>
    const putMethod = {
    method: 'delete', // Method itself
    headers: {
     'Content-type': 'application/json; charset=UTF-8' // Indicates the content 
    },
    // body: "hello" // We send data in JSON format
   }

   function deleteRecord(n){
   // make the HTTP put request using fetch api
   fetch(`/delete/${n}`, putMethod)
   .then(response => response.json())
   .then(data => console.log(data)) // Manipulate the data retrieved back, if we want to do something with it
   .catch(err => console.log(err))
   }
</script>
</html>